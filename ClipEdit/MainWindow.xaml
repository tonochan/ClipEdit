<Window x:Class="ClipEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="700" MinHeight="400" MinWidth="700">


    <Grid Margin="0" Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBox Name="myTextbox" Margin="10" TextWrapping="Wrap" Width="Auto" Grid.Row="0" Grid.Column="0" AcceptsReturn="True" AcceptsTab="True"/>
        <ComboBox HorizontalAlignment="Left" Height="30" Margin="10" VerticalAlignment="Top" Width="296" Grid.Row="1" Grid.Column="0"/>
        <DockPanel HorizontalAlignment="Right" Width="Auto" Height="Auto" Grid.Column="0" Grid.Row="1" Margin="10">
            <Button DockPanel.Dock="right" Content="Cancel" Height="30" Margin="0" VerticalAlignment="Top" Width="110"/>
            <Button DockPanel.Dock="right" Content="Convert" Name="btnConvert" Height="30" Margin="0,0,10,0" VerticalAlignment="Top" Width="132" Click="btnConvert_Click"/>
        </DockPanel>
        
            
    </Grid>

</Window>
